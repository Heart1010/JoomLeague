<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_joomleague</name>
	<creationDate>July 2015</creationDate>
	<author>JoomLeague Developers</author>
	<authorEmail>andone@mfga.at</authorEmail>
	<authorUrl>http://www.joomleague.at</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<copyright>(C) 2005-2015 joomleague.at. All rights reserved.</copyright>
	<version>3.0.1</version>
	<description>PLG_SEARCH_JOOMLEAGUE_XML_DESC</description>
	
	<files>
		<filename plugin="joomleague">joomleague.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_clubs" type="radio" class="btn-group btn-group-yesno" default="1" label="Clubs"
					description="Search Clubs ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_players" type="radio" class="btn-group btn-group-yesno" default="1" label="Players"
					description="Search Players ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_playgrounds" type="radio" class="btn-group btn-group-yesno" default="1"
					label="Playground" description="Search Playground ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_referees" type="radio" class="btn-group btn-group-yesno" default="1" label="Referees"
					description="Search Referees ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_staffs" type="radio" class="btn-group btn-group-yesno" default="1" label="Staffs"
					description="Search Staffs ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_teams" type="radio" class="btn-group btn-group-yesno" default="1" label="Teams"
					description="Search Teams ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="search_projects" type="radio" class="btn-group btn-group-yesno" default="1" label="Projects"
					description="Search Projects ?">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
